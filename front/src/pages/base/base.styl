  }
.leftbutton {
    display: flex;
    flex-direction: column;
    align-content: flex-end;
    flex-wrap: wrap;
    align-items: center;
    font-size: 0.6em
    font-weight: bold
  }
.rightbutton {
    display: flex;
    flex-direction: column;
    align-content: flex-start;
    flex-wrap: wrap;
    align-items: center;
    font-size: 0.6em
    font-weight: bold
  }
.spacearound {
    width: 2%;
  }
.displaycards {
    width: 99%;
    border-radius: 25px 25px 0px 0px;
    background-color: rgba(255,255,255,255);
    text-align: center
  }
.boxcards {
    display: flex;
    flex-wrap: nowrap;
    flex-direction: column;
    align-items: center;
    background-color: rgba(237,242,247,255);
    margin-top: 1%;
  }
.title {
    margin-top: 2%;
    font-size: 1.3em;
    font-weight: bold
  }

.nobox {
    border: 2px solid rgba(237,242,247,255);;
    border-radius: 5px;
    font-size: 0.75em
  }

.box {
    border: 2px solid rgba(146,177,232,255);
    border-radius: 5px;
    font-size: 0.75em
  }

.box:after {
  content: '';
	position: absolute;
	// bottom: 0;
	// left: 50%;
	width: 0;
	height: 0;
	border: 10px solid transparent;
	// border-top-color: #00aabb;
	border-bottom: 0;
	// margin-left: -20px;
  margin-left: -1em;
	margin-bottom: -20px;
  margin-top: -6px;
  transform: rotate(45deg);
  border-bottom:inherit;
  border-right:inherit;
  background: white;
}

