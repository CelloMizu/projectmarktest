body {
  font-family: Inter, sans-serif;
}

.background  {
    background-color: rgba(237,242,247,255);
    width: 100%;
    height: auto;
  }
.logo {
    width: 29%;
    margin-left: 11%;
    margin-top: 18%; 
  }
.buttonpressed {
    background: rgba(45,55,72,255);
    border-radius: 40%;
    color: rgba(187,190,195,255);
    margin-top: 2%;
  }
.buttonfree {
    background: rgba(255,255,255,255);
    border-radius: 40%;
    color: rgba(103,124,149,255);
    margin-top: 2%;
  }
.next {
    background: rgba(36,98,209,255);
    color: rgba(228,236,249,255);
    margin-top: 23%;
